<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="maintenance_request_form_technical_report_inherit" model="ir.ui.view">
        <field name="name">maintenance.request.form.technical.report.inherit</field>
        <field name="model">maintenance.request</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_request_view_form"/>
        <field name="arch" type="xml">

            <!-- Botón de impresión en encabezado -->
            <xpath expr="//header" position="inside">
                <button
                    name="action_print_technical_report"
                    type="object"
                    string="Imprimir Informe Técnico"
                    class="btn-primary"
                    icon="fa-print"
                />
            </xpath>

            <!-- Página de informe técnico -->
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Informe Técnico">
                    <group>
                        <group>
                            <field name="technical_report_number" readonly="1"/>
                        </group>
                    </group>

                    <separator string="Evaluación"/>
                        <field name="technical_evaluation_html" widget="html" placeholder="Describa la evaluación técnica..." nolabel="1"/>

                    <separator string="Sistemas Evaluados"/>
                    <!-- Compacto: más columnas para usar espacio horizontal -->
                    <group>
                        <field name="eval_engine"/>
                        <field name="eval_steering"/>
                        <field name="eval_suspension"/>
                        <field name="eval_tires"/>
                    </group>
                    <group>
                        <field name="eval_transmission"/>
                        <field name="eval_electrical"/>
                        <field name="eval_brakes"/>
                        <field name="eval_chassis"/>
                    </group>

                    <separator string="Introducción"/>
                        <field name="technical_introduction_html" widget="html" placeholder="Ingrese la introducción del informe..." nolabel="1"/>
                    

                    <separator string="Evidencias"/>
                    <group col="2">
                        <field name="technical_evidence_ids" nolabel="1"  >
                            <tree editable="bottom">
                                <field name="sequence"/>
                                <field name="name"/>
                                <field name="description"/>
                                <field name="image" widget="image" class="oe_avatar"/>
                            </tree>
                            <form string="Evidencia">
                                <sheet>
                                    <group>
                                        <field name="sequence"/>
                                        <field name="name"/>
                                        <field name="description"/>
                                        <field name="image" widget="image"/>
                                    </group>
                                </sheet>
                            </form>
                        </field>
                    </group>

                    <separator string="Conclusiones"/>
                            <field name="technical_conclusions_html" widget="html" placeholder="Conclusiones del informe..."/>
                            <field name="technical_waiting_response_text" placeholder="Mensaje final (opcional)"/>
                </page>
            </xpath>

        </field>
    </record>
</odoo>
