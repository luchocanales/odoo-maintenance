<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_employee_form_signature_inherit" model="ir.ui.view">
        <field name="name">hr.employee.form.maintenance.signature.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Firma">
                   <field name="signature_html" widget="html" placeholder="Firma del empleado" nolabel="1"/>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
