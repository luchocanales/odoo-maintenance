<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form: insert fields below maintenance_team_id and hide user_id -->
    <record id="maintenance_request_form_customize" model="ir.ui.view">
        <field name="name">maintenance.request.form.customize</field>
        <field name="model">maintenance.request</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_request_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='maintenance_team_id']" position="after">
                <field name="responsible_employee_id" options="{'no_create': True}"/>
                <field name="supervisor_employee_id" options="{'no_create': True}"/>
                <field name="workshop_partner_id" options="{'no_create': True}"/>
                <field name="city_id" domain="[('country_id.code','=','PE')]" options="{'no_create': True}"/>
                
            </xpath>

            <xpath expr="//field[@name='user_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <!-- Tree: replace user_id by responsible_employee_id -->
    <record id="maintenance_request_tree_customize" model="ir.ui.view">
        <field name="name">maintenance.request.tree.customize</field>
        <field name="model">maintenance.request</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_request_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="replace">
                <field name="responsible_employee_id"/>
                <field name="workshop_partner_id"/>
            </xpath>
        </field>
    </record>

    <record id="maintenance_request_kanban_customize" model="ir.ui.view">
        <field name="name">maintenance.request.kanban.customize</field>
        <field name="model">maintenance.request</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_request_view_kanban"/>
        <field name="arch" type="xml">

            <!-- Inserta Responsable debajo de employee_id (o user_id si employee_id no estÃ¡) -->
            <xpath expr="(//kanban/templates/t[@t-name='kanban-box']//field[@name='employee_id']
                        | //kanban/templates/t[@t-name='kanban-box']//field[@name='user_id'])[1]"
                position="after">

                <div t-if="record.responsible_employee_id.raw_value" class="mt4">
                    <span class="fa fa-user text-success me-1"/>
                    <span class="text-success">
                        <field name="responsible_employee_id"/>
                    </span>
                </div>

            </xpath>

        </field>
    </record>

</odoo>
